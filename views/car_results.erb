<div class="other-view-holder"  id="car-search-results">
  <h3 class="other-views-header"> full search results: </h3>

  <div id="results-scroll">
  <table>
    <thead class="table-header">
    <div align="center">
    <tr>
    <td> plate </td>
    <td> state </td>
    <td> make </td>
    <td> model </td>
    <td> style </td>
    <td> color </td>
    <td> location </td>
    <td> add </td></tr>
    </thead>
    <tbody class ="table-body">
    <% for car in @possible_matched_cars%>
    <tr>
      <form action="account/add_car" method="post">
      <td><%=car['plate']%></td>
      <td><%=car['state']%></td>
      <td><%=car['make']%></td>
      <td><%=car['model']%></td>
      <td><%=car['style']%></td>
      <td><%=car['color']%></td>
      <td><%=car['towed_to_address']%> | <%=car['tow_facility_phone']%></td>
      <input type="hidden" name="plate" value="<%=car['plate']%>"></input>
      <input type="hidden" name="state" value="<%=car['state']%>"></input>
      <input type="hidden" name="make" value="<%=car['make']%>"></input>
      <input type="hidden" name="model" value="<%=car['model']%>"></input>
      <input type="hidden" name="style" value="<%=car['style']%>"></input>
      <input type="hidden" name="color" value="<%=car['color']%>"></input>
      <td><input type="submit" class="car-add-btn" value="â˜œ" tooltip="add to My Cars"></input></td></tr>
      </form>
      <% end %>
  </tbody>
  </table>
  </div>
</div>
